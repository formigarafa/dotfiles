  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow bold
  changed = green bold
  untracked = cyan bold
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
